{
    // CMake configuration for Windows
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.generator": "Ninja",
    "cmake.configureOnOpen": true,
    "cmake.buildBeforeRun": true,
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.installPrefix": "${workspaceFolder}/install",
    // C/C++ configuration for Windows
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.default.intelliSenseMode": "windows-msvc-x64",
    "C_Cpp.default.compileCommands": "${workspaceFolder}/compile_commands.json",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.compilerPath": "cl.exe",
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.autocomplete": "default",
    "C_Cpp.suggestSnippets": true,
    // File associations
    "files.associations": {
        "*.hpp": "cpp",
        "*.h": "c",
        "*.cpp": "cpp",
        "*.c": "c",
        "*.tpp": "cpp"
    },
    // Editor settings
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.rulers": [
        80,
        120
    ],
    // Search settings
    "search.exclude": {
        "**/build/**": true,
        "**/bin/**": true,
        "**/.cache/**": true,
        "**/test_results/**": true,
        "**/_deps/**": true,
        "**/Debug/**": true,
        "**/Release/**": true,
        "**/*.pdb": true,
        "**/*.obj": true
    },
    // File watcher settings
    "files.watcherExclude": {
        "**/build/**": true,
        "**/bin/**": true,
        "**/.cache/**": true,
        "**/test_results/**": true,
        "**/_deps/**": true,
        "**/Debug/**": true,
        "**/Release/**": true,
        "**/*.pdb": true,
        "**/*.obj": true
    },
    // Git settings
    "git.ignoreLimitWarning": true,
    // Terminal settings
    "terminal.integrated.cwd": "${workspaceFolder}",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": "cmd.exe",
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "path": "C:\\Program Files\\Git\\bin\\bash.exe",
            "icon": "terminal-bash"
        }
    },
    // Windows specific settings
    "files.exclude": {
        "**/*.pdb": true,
        "**/*.obj": true,
        "**/Thumbs.db": true
    },
    // GitHub Copilot configuration
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false
    },
    "github.copilot.advanced": {
        "debug.overrideEngine": "copilot-codex"
    },
    // GitHub Copilot Chat configuration
    "github.copilot.chat.localeOverride": "en",
    "github.copilot.chat.welcomeMessage": "always",
    "github.copilot.chat.codeGeneration.useCodebaseContext": true,
    // Extension recommendations
    "extensions.recommendations": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "ms-vscode.cpptools-extension-pack",
        "vadimcn.vscode-lldb",
        "github.copilot",
        "github.copilot-chat",
        "matepek.vscode-catch2-test-adapter"
    ]
}