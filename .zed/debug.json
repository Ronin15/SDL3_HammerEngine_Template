[
  {
    "label": "Debug Main Application (SDL3_Template)",
    "adapter": "gdb",
    "request": "launch",
    "program": "${workspaceFolder}/bin/debug/SDL3_Template",
    "cwd": "${workspaceFolder}",
    "stopAtEntry": false,
    "setupCommands": [
      {
        "description": "Enable pretty-printing for gdb",
        "text": "-enable-pretty-printing",
        "ignoreFailures": true
      },
      {
        "description": "Set disassembly flavor to Intel",
        "text": "-gdb-set disassembly-flavor intel",
        "ignoreFailures": true
      }
    ]
  },
  {
